{
  "name": "azure-functions-api",
  "version": "0.0.1",
  "description": "Azure Function REST API Template",
  "main": "./dist/main.js",
  "license": "MIT",
  "scripts": {
    "clean": "shx rm -rf dist",
    "clean:generated": "shx rm -rf ./src/generated",
    "build": "tsc",
    "build:watch": "npm run build -w",
    "typecheck": "npm run generate && npm run build --noemit",
    "extensions:install": "func extensions install",
    "start": "func start --javascript",
    "start:watch": "npm run start watch",
    "lint": "eslint --fix",
    "lint:check": "eslint",
    "lint:api": "sh api-lint.sh",
    "generate": "npm run generate:definitions-internal",
    "generate:definitions-internal": "shx mkdir -p ./src/generated/definitions/internal && gen-api-models --api-spec ./api/internal.yaml --no-strict --out-dir ./src/generated/definitions/internal "
  },
  "devDependencies": {
    "@pagopa/typescript-config-node": "*",
    "@types/express": "^4.17.12",
    "@types/node": "~20.10.0",
    "dependency-check": "^4.1.0",
    "eslint": "^9.2.0",
    "eslint-config-rules": "workspace:^",
    "prettier": "^3.2.5",
    "shx": "^0.3.2",
    "swagger-cli": "^4.0.4",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@azure/functions": "4.2.0",
    "@pagopa/handler-kit": "^1.1.0",
    "@pagopa/handler-kit-azure-func": "^2.0.1",
    "@pagopa/openapi-codegen-ts": "^13.2.0",
    "@pagopa/ts-commons": "^12.6.0",
    "fp-ts": "^2.16.5",
    "io-ts": "^2.2.21"
  }
}
